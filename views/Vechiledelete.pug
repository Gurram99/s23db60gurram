extends layout 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let Vechileid = toShow._id 
    - let Vechile_model = toShow.Vechile_model 
    - let Vechile_year = toShow.Vechile_year
    - let Vechile_price = toShow.Vechile_price
    - let actionid = "/resource/Vechile/" + Vechileid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='VechileAttr mr-3') Vechile ID is: 
        div #{Vechileid} 
      div.row 
        div(class='VechileAttr mr-3') Vechile model is: 
        div #{Vechile_model} 
      div.row 
        div(class='VechileAttr mr-3') Vechile year is: 
        div #{Vechile_year} 
      div.row 
        div(class='VechileAttr mr-3') Vechile price is: 
        div #{Vechile_price} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the Vechile collection 
      window.location.href='/Vechile' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'      // Dont need a body for the delete 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/Vechile' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 
