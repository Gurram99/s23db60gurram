extends layout

block content
  h1= title
  - let result = results;
  a(class="btn btn-success" href="/Vechile/create") Create
  - var Vechile=[{Vechile_model:"Audi",Vechile_year:"2019",Vechile_price:2000},{Vechile_model:"GMC",Vechile_year:"2022",Vechile_price:3000},{Vechile_model:"Jeep",Vechile_year:"2020",Vechile_price:1000}]
  div(class="container-fluid mt-3")
  div(class="row m-1")
    each result,index  in results
      - let destination = `/Vechile/update?id=${result._id}`
      div(class="col-sm-2", onclick=`buy(${index})`) #{result.Vechile_model}, #{result.Vechile_year}, #{result.Vechile_price}
      button.btn(class="btn-primary ml-1",class="btn-sm", onclick=`dispatch('${destination}')`) Update
      a(class="btn btn-danger" href=`/Vechile/delete?id=${result._id}`) Delete
      a(class="btn btn-dark" href=`/Vechile/detail?id=${result._id}`) Details
  script.
    function buy(a) {
      alert(`You purchased Item ${a+1}`);
    }
    function dispatch(path) {
      window.location.href = path;
    }
